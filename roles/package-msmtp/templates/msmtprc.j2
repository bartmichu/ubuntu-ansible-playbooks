# Test settings with:
# echo "hello world" | msmtp -a default username@domain.com

# Set default values for all following accounts.
defaults

auth           on
tls            on
tls_starttls    on
tls_certcheck   on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

#logfile /var/log/msmtp.log
syslog LOG_MAIL

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           {{ email_address }}
user           {{ email_address }}
password       {{ email_password }}

# Set a default account
account default : gmail

aliases   /etc/msmtp.aliases
